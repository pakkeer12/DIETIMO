  <script src="assets/js/chart.min.js"></script>
  <script src="assets/js/bs-init.js"></script>
  <script>
      var CarboContent = <%= item.percentCarbs %>;
      var ProteinContent = <%= item.percentProtein %>;
      var FatContent = <%= item.percentFat %>;

      var donutOptions = {
          cutoutPercentage: 60,
          legend: {position:'bottom', padding:5, labels: {pointStyle:'circle', usePointStyle:true}},
          title: {
              display: true,
              text: "MAJOR NUTRIENT CONTENTS",
              fontSize:20
          }
      };
      var chDonutData1 = {
          labels: ['Carbohydrates', 'Proteins', 'Fat'],
          datasets: [
          {
              backgroundColor: ["#FF0000","#00FF00","#0000FF"],
              borderWidth: 2,
              data: [CarboContent,ProteinContent,FatContent],
              hoverBorderWidth:0
          }
          ]
      };
      var chDonut1 = document.getElementById("chDonut1");
      if (chDonut1) {
      new Chart(chDonut1, {
          type: 'pie',
          data: chDonutData1,
          options: donutOptions
      });
      }
  </script>

